BoxLayout:
    padding: '20 dp'
    spacing: '10 dp'
    orientation: 'vertical'
    Label:
        text: 'Configuration des microcontr\u00f4leurs pour les TP de physique'
        font_size: '40 sp'
    Label:
        id: info_lbl
        text: 'Pret'
        font_size: '20 sp'
        text_size: self.size
        halign: 'center'
        valign: 'center'
    Label:
        id: choosen_config_lbl
        text: 'Configuration choisie:'
        font_size: '15 sp'
    GridLayout:
        id: config_grid
        cols: 4
    Button:
        text: 'Configurer le(s) \u00b5Contr\u00f4leur(s)'
        on_release: app.perform_config()
    Button:
        text: 'Mise \u001f jour des \u00b5Contr\u00f4leur(s) (firmware et fichier par d\u00e9faut)'
        on_release: app.perform_update()
    Button:
        text: 'Quitter'
        on_release: app.stop()
    Label:
        text: 'circuitpy-physique - Olivier Boesch \u00a9 2019 - Configuration automatique de \u00b5C pour CircuitPython\nlicence MIT'
        text_size: self.size
        halign: 'center'

<PopupMessage@Popup>
    size_hint: None,None
    size: '400 dp','130 dp'
    pos_hint: {'top': 0.95, 'right':0.98}
    auto_dismiss: True
    on_open: root.when_opened()
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: message_content_lbl
            text_size: self.size
            halign: 'center'
            valign: 'center'
